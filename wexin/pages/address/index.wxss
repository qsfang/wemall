/* pages/address/address.wxss */
.address-list{
    width: 100%;
    background-color: #fff;
    margin-top: 20rpx;
    margin-bottom: 90rpx;
}
.address-list .a-address{
    width: 750rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 25rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #eee;
}
.default-icon {
  width: 60rpx;
  height: 60rpx;
}
.a-address .left-text{
  flex: 1;
  margin-left: 30rpx;
  box-sizing: border-box;
}

.a-address .left-text .name-tel{
    margin-bottom: 20rpx;
}
.a-address .left-text .addr {
  font-size: 24rpx;
}
.a-address .left-text .address-box{
    font-size:24rpx;
    color:#888888;
    line-height:36rpx;
}
.a-address .right-edit{
    width: 60rpx;
    height: 60rpx;
    box-sizing: border-box;
}

.add {
  display: flex;
  flex-direction: row;
  align-items: center;   
  justify-content: center;  
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #fff;
}
.add image {
  width: 60rpx;
  height: 60rpx;
}
.add text {
  font-size: 32rpx;
  line-height: 60rpx;
  color: #666;
}