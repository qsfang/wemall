/* pages/orders/orders.wxss */
.nav-bar {
  position: fixed;
  top: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 5rpx #dcdcdc;
  z-index: 9;
}
.nav-bar-item {
  position: relative;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}
.active {
  color: #f56d02;
}
.nav-bar-item.active:after {
  content: "";  
  display: block;  
  position: absolute;  
  bottom: -1rpx; 
  left: 50%;
  margin-left: -30rpx; 
  width: 60rpx;
  height: 4rpx;  
  background: #f56d02; 
}

.no-order{
    width: 100%;
    position: absolute;
    bottom: 0;
    top: 88rpx;
    left: 0;
    right: 0;
    text-align: center;
    padding-top: 203rpx;
    background-color: #F2f2f2;
}
.no-order-img{
    width: 81rpx;
    height: 96rpx;
    margin-bottom: 31rpx;
}
.no-order .text{
    font-size:28rpx;
    color:#999999;
    text-align: center
}

.order-list {
  margin-top: 90rpx;
  width: 100%;
}
.order-list-item {
  margin-top: 20rpx;
  padding: 0 0 0 40rpx;
  box-sizing: border-box;   
  background-color: #fff;
}
.list-data {
  display: flex;
  padding-right: 40rpx;
  box-sizing: border-box; 
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 80rpx;
  border-bottom: 1rpx solid #eee;
}
.list-data text {
  display: block;
}
.order-no {
  flex: 1;
}
.order-status {
  color: #333;
}
.text-color {
  color: #f56d02;
}

.goods {
  display: flex;
  padding: 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.goods image {
  flex-shrink: 0;
  width: 150rpx;
  height: 150rpx;
}
.goods-info {
  flex: 1;
  margin-left: 20rpx;
  padding-right: 40rpx;
  box-sizing: border-box;
  color: #333;
}
.goods-info text {
  display: block;
  line-height: 50rpx;
}
.goods-title {
  width: 500rpx;
  height: 50rpx;
  font-size: 32rpx;
  font-weight: 500;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.shop_num,
.price {
  color: #999;
  font-size: 28rpx;
}

.goods-des {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-right: 40rpx;
  box-sizing: border-box;
  height: 80rpx;
}
.goods-price {
  flex: 1;
  font-size: 28rpx;
}
.btn {
  margin-left: 20rpx;
  width: 118rpx;
  height: 40rpx;
  color: #333;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 8rpx; 
  border: 1rpx solid #dcdcdc; 
}
.topay-btn {
  color: #f56d02;
  border: 1rpx solid #f56d02;
}