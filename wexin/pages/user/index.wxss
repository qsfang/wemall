/* pages/user/user.wxss */
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
  background-color: #f56d02;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx; 
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.login {
  color: #fff;
  font-size: 34rpx;
}
.login-btn {
  margin-top: 15rpx;
  padding: 0;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 1;
  color: #d2cbbb;
  border: 1rpx solid transparent;
  background-color: transparent;
}
.login-btn::after {
  border: none;
}

.menu {
  margin-top: 30rpx;
  width: 100%;
  background-color: #fff;
}
.menu-item {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.menu-icon {
  margin: 0 20rpx;
  width: 60rpx;
  height: 60rpx;
}
.text {
  display: flex; 
  justify-content: space-between;
  align-items: center;
  flex: 1;
  padding: 0 20rpx 0 0;
  box-sizing: border-box; 
  height: 99rpx;
  font-size: 36rpx;
  color: #333;
  border-bottom: 1rpx solid #f2f2f2;
}
.arrow-right {
  float: right;
  width: 16rpx;
  height: 24rpx;
}

.contact {
  flex: 1;
  padding: 0;
  color: #333;
  text-align: left;
  background-color: transparent;
}
.contact::after {
  color: #333;
  border: 0;
}